section(id="workshop")
  .workshop__container
    - no_of_workshops = 0
    - suffix = ""
    each item in site.data.workshop
      - no_of_workshops++
    if no_of_workshops > 1
      - suffix = "s"
    .inner
      h2 !{no_of_workshops} workshop!{suffix}
      .tabs.is-centered.is-toggle.is-centered.is-fullwidth
        ul
          - workshop_no = 0
          - active_class = ""
          each workshop in site.data.workshop
            - workshop_no++
            if workshop_no ==1
              - active_class = "is-active"
            else
              - active_class = ""
            li(class=""+active_class)
              a !{workshop.workshop_date}
        .tab-content
          each workshop in site.data.workshop
            - filename = "/img/"+workshop.workshop_pic_filename
            .columns
              .column.is-one-quarter
                .card
                  .card-content
                    .card-image
                      img(src=filename)
                    p.title !{workshop.workshop_teacher}
                    p.subtitle !{workshop.workshop_teacher_role}
                    p.subtitle @ !{workshop.workshop_teacher_org}
              .column.has-border
                .row-info
                  .info-icon
                    include ../../../source/ico/ico-where.svg
                  .info__location !{workshop.workshop_location}
                  | &nbsp;|&nbsp;
                  .info-icon.padded
                    include ../../../source/ico/ico-calendar.svg
                  .info__date !{workshop.workshop_date}
                h5 !{workshop.workshop_title}
                p !{workshop.workshop_description}
                .row__more
                  button.button.is-medium.is-rounded.is-primary BUY TICKETS NOW
                  button.button.is-medium.is-rounded.is-primary READ MORE
script(type="text/javascript" src='/js/layout/components/workshop/workshop.js')