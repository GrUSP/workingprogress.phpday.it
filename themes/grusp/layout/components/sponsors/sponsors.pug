section(id="sponsors").section_nopadding
  .sponsors__container
    .inner
      if(is_home())
        h2.title.is-2 Sponsors
      else
        h2.title.is-2 Thanks to
      if site.data.sponsors.main
        .row__underlined
          h3.title.is-3 Main
        .columns
          each sponsor in site.data.sponsors.main
            .column.column__main
              - filename = "/img/logos/"+sponsor.logo_filename
              a(href=sponsor.site_url target="_blank")
                img(src=filename alt=sponsor.name)
